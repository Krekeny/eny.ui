{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020"],
    "jsx": "react-native",
    "declaration": true,
    "declarationMap": true,
    "outDir": "./lib/typescript",
    "rootDir": "./storybook/src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "noEmit": false,
    "types": [],
    "typeRoots": ["./node_modules/@types"]
  },
  "include": ["storybook/src/**/*"],
  "exclude": [
    "storybook/src/**/*.stories.tsx",
    "storybook/src/**/*.stories.ts",
    "node_modules"
  ]
}
